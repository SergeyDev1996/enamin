<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_employee_form_military" model="ir.ui.view">
        <field name="name">hr.employee.form.military</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='personal_information']/group" position="inside">
                <group string="Військовий облік">
                    <field name="booking"/>
                    <field name="mobilized"/>
                    <field name="tck_sp_id"/>
                    <field name="edrpvr_number"/>
                </group>
            </xpath>

        </field>
    </record>
</odoo>
