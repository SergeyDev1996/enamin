<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_tck_sp_tree" model="ir.ui.view">
        <field name="name">tck.sp.tree</field>
        <field name="model">tck.sp</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_tck_sp_form" model="ir.ui.view">
        <field name="name">tck.sp.form</field>
        <field name="model">tck.sp</field>
        <field name="arch" type="xml">
            <form string="ТЦК та СП">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tck_sp" model="ir.actions.act_window">
        <field name="name">ТЦК та СП</field>
        <field name="res_model">tck.sp</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_tck_sp_root"
              name="ТЦК та СП"
              parent="hr.menu_hr_root"
              action="action_tck_sp"
              sequence="50"/>
</odoo>
