<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_ppe_tree" model="ir.ui.view">
        <field name="name">hr.employee.ppe.tree</field>
        <field name="model">hr.employee.ppe</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="assign_date"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_employee_ppe_form" model="ir.ui.view">
        <field name="name">hr.employee.ppe.form</field>
        <field name="model">hr.employee.ppe</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_view_product" type="object" string="Open Product" class="oe_highlight"/>
                    <field name="active" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="employee_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="assign_date"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_employee_ppe" model="ir.actions.act_window">
        <field name="name">Employee PPE</field>
        <field name="res_model">hr.employee.ppe</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"default_assign_date": context_today()}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create PPE assignments to track which products are issued to each employee.
            </p>
        </field>
    </record>

    <menuitem id="menu_hr_employee_ppe_root" name="Employee PPE" parent="hr.menu_hr_root" sequence="35"/>
    <menuitem id="menu_hr_employee_ppe" name="Assignments" parent="menu_hr_employee_ppe_root" action="action_hr_employee_ppe"/>
</odoo>
