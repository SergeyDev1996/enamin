<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_ppe" model="ir.ui.view">
        <field name="name">hr.employee.form.ppe</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="PPE">
                    <field name="company_id" invisible="1"/>
                    <field name="ppe_ids" context="{'default_employee_id': active_id, 'default_company_id': company_id}" colspan="4">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                            <field name="assign_date"/>
                            <field name="active"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
